
<h1>List of users</h1>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th>Is Parent?</th>
    <th></th>
  </tr>

  <% @users.each do |a_user| %>
    <tr>
      <td><%= a_user.id %></td>
      <td><%= a_user.user_name %></td>
      <td>
        <% if a_user.is_parent %>
          Parent
        <% else %>
          Kid
        <% end %>
      </td>
      <td><a href="/users/<%= a_user.user_name %>">Show details</a></td>
    </tr>
  <% end %>
</table>