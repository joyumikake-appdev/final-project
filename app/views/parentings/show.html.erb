<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Parenting #<%= @parenting.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/parentings" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_parenting/<%= @parenting.id %>" class="btn btn-block btn-outline-secondary">
          Delete parenting
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Kid
      </dt>
      <dd>
        <%= @parenting.kid_id %>
      </dd>

      <dt>
        Parent
      </dt>
      <dd>
        <%= @parenting.parent_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@parenting.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@parenting.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit parenting
    </h2>

    <form action="/modify_parenting/<%= @parenting.id %>"  method="post" >
      <div class="form-group">
        <label for="kid_id_box">
          Kid
        </label>

        <input type="text" id="kid_id_box" name="query_kid_id" class="form-control" value="<%= @parenting.kid_id %>">
      </div>

      <div class="form-group">
        <label for="parent_id_box">
          Parent
        </label>

        <input type="text" id="parent_id_box" name="query_parent_id" class="form-control" value="<%= @parenting.parent_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update parenting
      </button>
    </form>
  </div>
</div>

<hr>
